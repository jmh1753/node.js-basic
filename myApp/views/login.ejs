<!DOCTYPE html>
<html>
  <head>
    <title><%= page %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- 부트스트랩 -->
    <link rel="stylesheet" href="/stylesheets/bootstrap/bootstrap.css"/>
  </head>
  <body>
    <% include ./headers/header%>

    <div class="container">
      <div class="row">
          <div class="col-sm-5">

              <div class="login-box well">
                  <form accept-charset="UTF-8" role="form" method="post" action="">
                      <legend>로그인</legend>
                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-user"></i></span>
                          <input type="text" id="id" value='' placeholder="id를 입력하세요" class="form-control" />
                      </div>
                      <div class="input-group">
                          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                          <input type="password" id="password" value='' placeholder="비밀번호를 입력하세요" class="form-control" />
                      </div>
                      <button type="submit" id="login-submit" class="btn btn-default btn-block"/>로그인</button> <span class='text-center'><a href="" class="text-sm">비밀번호 찾기</a></span>
                  </form>
              </div>

          </div>
      </div>
  </div>









    <!-- 부트스트랩 -->
    <script type="text/javascript" src="/javascripts/bootstrap/bootstrap.min.js"></script>
  </body>
  <script>
    $(document).ready(function(){
      $('#login').addClass('active');

      $('#home').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#home').addClass('active');
      window.location.assign("/");
    });

    $('#login').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#login').addClass('active');
      window.location.assign("/login");
    });

    $('#join').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#join').addClass('active');
      window.location.assign("/join");
    });

    $('#fileupload').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#fileupload').addClass('active');
      window.location.assign("/fileupload");
    });

    });
    
  </script>
</html>
