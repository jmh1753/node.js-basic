
    <article class="container" style="float: left;">
  
        <div class="col-sm-4 col-md-offset-3">
        
            <div class="form-group">
                <label for="inputId">아이디</label>
                <input type="text" class="form-control" id="id" placeholder="아이디를 입력해 주세요">
            </div>
            <div class="form-group">
                <label for="inputId">비밀번호</label>
                <input type="text" class="form-control" id="password" placeholder="아이디를 입력해 주세요">
            </div>
            
            


            <div class="form-group text-center">
                <button type="button" onclick="login_click()" class="btn btn-primary">
                    로그인<i class="fa fa-check spaceLeft"></i>
                </button>
            </div>
       
        </div>

    </article>


  <script>
    $(document).ready(function(){
      $('.navclass').removeClass('active');
      $('#login').addClass('active');

        $('#home').on('mousedown', function(e){
        e.preventDefault();
        $('.navclass').removeClass('active')
        $('#home').addClass('active');
        window.location.assign("/");
        });

        $('#login').on('mousedown', function(e){
        e.preventDefault();
        $('.navclass').removeClass('active')
        $('#login').addClass('active');
        window.location.assign("/login");
        });

        $('#join').on('mousedown', function(e){
        e.preventDefault();
        $('.navclass').removeClass('active')
        $('#join').addClass('active');
        window.location.assign("/join");
        });

        $('#fileupload').on('mousedown', function(e){
        e.preventDefault();
        $('.navclass').removeClass('active')
        $('#fileupload').addClass('active');
        window.location.assign("/fileupload");
        });

        $('#board').on('mousedown', function(e){
        e.preventDefault();
        $('.navclass').removeClass('active')
        $('#board').addClass('active');
        window.location.assign("/board");
        });

    });

    login_click = () => {
        console.log('여기');
        let id = $('#id').val();
        let password = $('#password').val();

        let sendData = {id, password};
        $.ajax({
            url: "./login",
            type: "post",
            dataType: "json",
            data: sendData,
            success: function(data){
              console.log('data : ' + data.result);
            },
            error: function (request, status, error){        
              console.log('request : ' + request);
              console.log('status : ' + status);
              console.log('error : ' + error);
            }
        });
    }
  </script>