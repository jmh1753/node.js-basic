<!DOCTYPE html>
<html>
  <head>
    <title><%= page %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- 부트스트랩 -->
    <link rel="stylesheet" href="/stylesheets/bootstrap/bootstrap.css"/>
  </head>
  <body>
    <% include ./headers/header%>

    <article class="container">
  
        <div class="col-sm-6 col-md-offset-3">
        
            <div class="form-group">
                <label for="inputId">아이디</label>
                <input type="text" class="form-control" id="id" placeholder="아이디를 입력해 주세요">
            </div>
            <div class="form-group">
                <label for="inputName">이름</label>
                <input type="text" class="form-control" id="name" placeholder="이름을 입력해주세요">
            </div>
            <div class="form-group">
                <label for="inputPhone">폰번호</label>
                <input type="tel" class="form-control" id="phone" placeholder="폰번호를 입력해주세요">
            </div>
            <div class="form-group">
                <label for="inputBirth">생일</label>
                <input type="text" class="form-control" id="birth" placeholder="생일을 입력해 주세요">
            </div>
            <div class="form-group">
                <label for="inputAddress">주소</label>
                <input type="text" class="form-control" id="address" placeholder="주소를 입력해 주세요">
            </div>
            <div class="form-group">
                <label for="inputPassword">비밀번호</label>
                <input type="password" class="form-control" id="password" placeholder="비밀번호를 입력해 주세요">
            </div>
            <div class="form-group">
                <label for="inputPasswordCheck">비밀번호 확인</label>
                <input type="password" class="form-control" id="passwordCheck" placeholder="비밀번호를 입력해 주세요">
            </div>


            <div class="form-group text-center">
                <button type="button" onclick="join_click()" class="btn btn-primary">
                    회원가입<i class="fa fa-check spaceLeft"></i>
                </button>
            </div>
       
        </div>

    </article>











    <!-- 부트스트랩 -->
    <script type="text/javascript" src="/javascripts/bootstrap/bootstrap.min.js"></script>
  </body>

  <script>
    $(document).ready(function(){
      $('#join').addClass('active');

      $('#home').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#home').addClass('active');
      window.location.assign("/");
    });

    $('#login').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#login').addClass('active');
      window.location.assign("/login");
    });

    $('#join').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#join').addClass('active');
      window.location.assign("/join");
    });

    $('#fileupload').on('mousedown', function(e){
      e.preventDefault();
      $('.navclass').removeClass('active')
      $('#fileupload').addClass('active');
      window.location.assign("/fileupload");
    });

    });
    

    join_click = () =>{
      let id = $('#id').val();
      let name = $('#name').val();
      let phone = $('#phone').val();
      let birth = $('#birth').val();
      let address = $('#address').val();
      let password = $('#password').val();
      let passwordCheck = $('#passwordCheck').val();

      let sendData = {'id':id, 'name':name, 'phone':phone, 'birth':birth, 'address':address, 'password':password, 'passwordCheck':passwordCheck};
      $.ajax({
        url: "./join",
        type: "post",
        dataType: "json",
        data: sendData,
        success: function(data){
          console.log('data : ' + data);
          alert(data);
        },
        error: function (request, status, error){        
          console.log('request : ' + request);
          console.log('status : ' + status);
          console.log('error : ' + error);
        }
      });
    }

  </script>
</html>
